<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <appender name="console" class="org.apache.log4j.ConsoleAppender"> 
    <param name="Target" value="System.out"/> 
    <layout class="org.apache.log4j.PatternLayout"> 
      <param name="ConversionPattern" value="%-5p %c{1} - %m%n"/> 
    </layout> 
  </appender> 

  <!--  Reduce logging from Apache code, e.g. PDFBox  -->
  <logger name="org.apache">
    <level value="warn"/> 
  </logger>
  <logger name="org.apache.pdfbox">
    <level value="warn"/> 
  </logger>
  <logger name="org.apache.solr.hadoop">
    <level value="warn"/> 
  </logger>
  
  <!-- Reduce logging from DROID -->
  <logger name="uk.gov.nationalarchives.droid">
    <!-- Specifically  uk.gov.nationalarchives.droid.core.signature.droid6.InternalSignature -->
    <level value="error"/> 
  </logger>
    
  <!--  Increase logging from this code  -->
  <logger name="uk.bl.wap">
    <level value="info"/> 
  </logger>
  <logger name="uk.bl.wa">
    <level value="debug"/>
  </logger>
    
  <root> 
    <priority value="warn" /> 
    <appender-ref ref="console" />
  </root>
  
</log4j:configuration>